USE BillingForShopDB;
GO
CREATE TABLE SHOP_ITEM_TBL (
    Item_ID VARCHAR(10) PRIMARY KEY,
    Item_Name VARCHAR(30) NOT NULL,
    Price DECIMAL(8,2) NOT NULL,
    Quantity INT NOT NULL CHECK (Quantity >= 0)
);
GO
INSERT INTO SHOP_ITEM_TBL VALUES
('S501', 'Notebook', 40.00, 100),
('S502', 'Pen', 10.00, 200),
('S503', 'Pencil', 5.00, 300);
GO
CREATE TABLE SHOP_BILL_TBL (
    Bill_ID INT PRIMARY KEY,
    Item_ID VARCHAR(10) NOT NULL,
    Quantity INT NOT NULL,
    Total_Amount DECIMAL(10,2) NOT NULL,
    Bill_Date DATETIME NOT NULL,

    CONSTRAINT FK_ITEM_ID
        FOREIGN KEY (Item_ID)
        REFERENCES SHOP_ITEM_TBL(Item_ID)
);
GO
SELECT * FROM SHOP_ITEM_TBL;
SELECT * FROM SHOP_BILL_TBL;

SELECT * FROM SHOP_BILL_TBL;
SELECT Quantity FROM SHOP_ITEM_TBL WHERE Item_ID='S501';
